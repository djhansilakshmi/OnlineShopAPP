@model OnlineShop_Web.Models.VM.ProductUpdateVM

<form asp-action="UpdateProduct">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update Product</h1>
        <hr />
        <input hidden asp-for="Product.ProductId" />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Product.Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Product.Name" disabled class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

             <div class="col-2">
                <label asp-for="Product.Brand" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Product.Brand" disabled class="form-control" />
                <span asp-validation-for="Product.Brand" class="text-danger"></span>
            </div>

            @* Description  *@
            <div class="col-2">
                <label asp-for="Product.Description" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Product.Description" disabled class="form-control" rows="5" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            @* Currency  *@
            <div class="col-2">
                <label asp-for="Product.Currency" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Product.Currency" class="form-control" />
                <span asp-validation-for="Product.Currency" class="text-danger"></span>
            </div>

            @* Amount  *@
            <div class="col-2">
                <label asp-for="Product.Amount" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Product.Amount" class="form-control" />
                <span asp-validation-for="Product.Amount" class="text-danger"></span>
            </div>

            @* InventoryTotal  *@
            <div class="col-2">
                <label asp-for="Product.InventoryTotal" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Product.InventoryTotal" class="form-control" />
                <span asp-validation-for="Product.InventoryTotal" class="text-danger"></span>
            </div>

            @* InventoryAvailable  *@
            <div class="col-2">
                <label asp-for="Product.InventoryAvailable" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Product.InventoryAvailable" class="form-control" />
                <span asp-validation-for="Product.InventoryAvailable" class="text-danger"></span>
            </div>

            @* InventoryReserved  *@
            <div class="col-2">
                <label asp-for="Product.InventoryReserved" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Product.InventoryReserved" class="form-control" />
                <span asp-validation-for="Product.InventoryReserved" class="text-danger"></span>
            </div>


            @* <div class="col-2">
                <label asp-for="VillaNumber.VillaID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaNumber.VillaID" class="form-select" asp-items="@Model.VillaList">
                    <option disabled selected>--Select Villa--</option>
                </select>
                <span asp-validation-for="VillaNumber.VillaID" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="VillaNumber.SpecialDetails" class="form-control" rows="5"></textarea>
                <span asp-validation-for="VillaNumber.SpecialDetails" class="text-danger"></span>
            </div> *@

            <div class="col-5 offset-2">
                <a asp-action="IndexProduct" asp-controller="Product" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
